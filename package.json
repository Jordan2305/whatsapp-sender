{
  "name": "whatsapp-sender",
  "version": "1.0.0",
  "description": "Aplicación para envío automático de mensajes WhatsApp",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "electron": "electron .",
    "build": "electron-packager . WhatsApp-Sender --platform=darwin --arch=x64 --out=dist --overwrite --ignore='data/.wwebjs_auth' --no-prune",
    "clean-db": "node scripts/clean-database.js",
    "clean-session": "node scripts/clean-session.js",
    "install-client": "./install-client.sh"
  },
  "dependencies": {
    "@puppeteer/browsers": "^2.10.12",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "puppeteer": "^24.25.0",
    "qrcode": "^1.5.3",
    "sql.js": "^1.13.0",
    "whatsapp-web.js": "^1.23.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.1"
  }
}
